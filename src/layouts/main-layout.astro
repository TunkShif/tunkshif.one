---
import { Flex } from "styled-system/jsx"
import RootLayout from "./root-layout.astro"
import SideBar from "~/components/side-bar.astro"

export interface Props {
  title?: string
}

const { title } = Astro.props
---

<RootLayout title={title}>
  <Flex position="relative" w="full" h="full" minH="screen" overflow="auto">
    <SideBar />
    <Flex w="full" flex="1">
      <slot />
    </Flex>
  </Flex>
</RootLayout>
