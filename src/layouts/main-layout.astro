---
import { Flex } from "styled-system/jsx"
import { SideBar, SideBarOverlay } from "~/components/layout/side-bar"
import RootLayout from "~/layouts/root-layout.astro"

export interface Props {
  title?: string
}

const { title } = Astro.props
---

<RootLayout title={title}>
  <Flex position="relative" w="full" h="full" overflow="auto">
    <SideBar initialRoute={Astro.url.pathname} client:load transition:persist />
    <SideBarOverlay client:load transition:persist />
    <Flex w="full" flex="1">
      <slot />
    </Flex>
  </Flex>
</RootLayout>
