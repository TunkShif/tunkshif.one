---
import Header from "@/components/header.astro"

import "@fontsource-variable/inter"
import "@fontsource/dm-mono"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <slot name="head" />
  </head>

  <body class="relative text-secondary bg-secondary">
    <Header />

    <main class="mx-8 my-8 lg:mx-auto lg:max-w-3xl">
      <slot />
    </main>
  </body>
</html>

<script is:inline>
  if (
    localStorage.theme === "dark" ||
    (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches)
  ) {
    document.documentElement.classList.add("dark")
  } else {
    document.documentElement.classList.remove("dark")
  }
</script>

<style is:global>
  :root {
    --text-color-primary: theme(colors.slate.900);
    --text-color-secondary: theme(colors.slate.700);

    --surface-color-primary: theme(colors.white);
    --surface-color-secondary: theme(colors.white);

    --border-color-primary: theme(colors.slate.900 / 10%);
  }

  .dark {
    --text-color-primary: theme(colors.slate.200);
    --text-color-secondary: theme(colors.slate.400);

    --surface-color-primary: theme(colors.slate.900);
    --surface-color-secondary: theme(colors.slate.900);

    --border-color-primary: theme(colors.white / 10%);
  }

  body {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>
