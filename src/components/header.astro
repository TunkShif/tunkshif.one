---
const links = [
  { text: "Blog", route: "/posts" },
  { text: "Projects", route: "/projects" },
  { text: "About", route: "/about" }
]
---

<header
  class="sticky top-0 inset-x-0 flex bg-white/80 dark:bg-slate-800/60 backdrop-blur border-b border-primary z-50"
>
  <div class="px-4 w-full h-14 max-w-4xl mx-0 lg:mx-auto">
    <div class="flex h-full justify-between items-center">
      <a class="text-3xl text-primary leading-[initial]" href="/">
        <span class="not-sr-only">ܛܝ</span>
        <span class="sr-only">go back to home page</span>
      </a>

      <div class="flex items-center">
        <nav>
          <ul class="flex items-center gap-1">
            {
              links.map(({ text, route }) => (
                <li>
                  <a
                    href={route}
                    class:list={[
                      "inline-block rounded-md px-2 py-1.5 text-sm font-medium transition duration-300 ease-in-out",
                      "hover:bg-slate-100 dark:hover:bg-slate-700"
                    ]}
                  >
                    {text}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
